# Вычитание
b = 10 - 4
print("Вычитание:", b)  

# Умножение
c = 6 * 7
print("Умножение:", c)  

# Возведение в степень
d = 2 ** 3
print("Возведение в степень:", d)  

# Деление
e = 15 / 4
print("Деление:", e)  

# Целочисленное деление
f = 15 // 4
print("Целочисленное деление:", f)  

# Остаток от деления
g = 15 % 4
print("Остаток от деления:", g)  


