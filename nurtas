1.
lst = [1, 2, 3, 4, 5]
reversed_lst = lst[::-1]
print("Обратный порядок:", reversed_lst)

2.
def list_sort(lst):
    return sorted(lst, key=abs, reverse=True)

# Пример:
nums = [3, -10, 5, -2, 0]
sorted_nums = list_sort(nums)
print("Сортировка по убыванию |x|:", sorted_nums)

3.
def change(lst):
    lst[0], lst[-1] = lst[-1], lst[0]
    return lst

# Пример:
sample = [10, 20, 30, 40]
changed = change(sample)
print("После замены:", changed)



